{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": false,
    "baseUrl": ".",
    "jsx": "react-native",
    "target": "es2017",
    "lib": ["es2017"],
    "types": ["react"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "dist",
    "**/__tests__/**"
  ]
}
